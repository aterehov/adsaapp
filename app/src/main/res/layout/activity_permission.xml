<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/permissionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Необходимо предоставить разрешение"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/permissionDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Доступ к примерной геолокации"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@+id/permissionHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="36dp"/>

    <TextView
        android:id="@+id/permissionExplanationHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Разрешение требуется для: "
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toBottomOf="@+id/permissionDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/permissionExplanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Автоматическое заполнение координат при создании обращения"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintTop_toBottomOf="@+id/permissionExplanationHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="36dp"/>

    <Button
        android:id="@+id/permissionAllowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Разрешить"
        app:layout_constraintTop_toBottomOf="@+id/permissionExplanation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/permissionDenyButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отказать"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/permissionAllowButton"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>